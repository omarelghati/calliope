@model Calliope.Models.User
@{
    ViewBag.Title = "Register";
}
@Styles.Render("~/Content/LoginStyle.css")

<div class="wrapper">
    @using (Html.BeginForm("Register", "user", FormMethod.Post, new { @class = "form-signin", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <center>
            <h3 style="color:white">Fiche d'inscription</h3>
            <hr class="colorgraph"><br />
                @if(!Html.ViewData.ModelState.IsValid){
                <div class="panel panel-danger">
                    <div class="panel-body">
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                    </div>
                </div>
            }
            <div class="form-group">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.nomComplet, new { @class = "form-control", @placeholder = "Nom complet.." })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.email, new { @class = "form-control" , @placeholder = "Adresse E-mail.."})
                </div>
                @Html.TextBoxFor(m => m.phone, new { @class = "form-control", @placeholder = "Numéro du téléphone" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.password, new { @class = "form-control" , @placeholder = "Mot de passe.." })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.confirmPassword, new { @class = "form-control" , @placeholder = "Confirmation du mot de passe.."})
            </div>
            <div class="form-group">
                <label style="color:white;" for="civility">Vous étes :</label>
                <select name="civilite" class="form-control">
                    <option>Madame</option>
                    <option>Mademoiselle</option>
                    <option>Monsieur</option>
                </select>
            </div>
            <div class="form-group">
                <label style="color:white;" for="signupAs">Vous étes :</label>
                <select name="type" class="form-control">
                    <option value="Parent">Parent</option>
                    <option value="Administrateur">Administrateur</option>
                    <option value="Enseignant">Enseignant</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" class="col-md-offset-2 btn btn-primary center-block" value="S'inscrire" />
            </div>
        </center>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
