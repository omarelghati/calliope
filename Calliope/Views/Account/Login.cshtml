@{
    ViewBag.Title = "Accueil";
}
    @{
        ViewBag.Title = "Accueil";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    @Styles.Render("~/Content/LoginStyle.css")
    <div class="container">
        <div class="wrapper">
            <form action="" method="post" name="Login_Form" class="form-signin">
                <h3 class="form-signin-heading">Authentification</h3>
                <hr class="colorgraph"><br>
                <center>
                <div class="form-group">
                    <input type="email" class="form-control" name="Username" placeholder="E-mail.." required autofocus />
                </div>
                </center>
                <center>
                    <div class="form-group">

                        <input type="password" class="form-control" name="Password" placeholder="Mot de passe.." required="" />

                    </div>
                </center>
                    <div class="form-group">
                        <label style="color:white;" for="signupAs">S'authentifier en tant que :</label>
                        <center>
                            <select name="signupAs" class="form-control">
                                <option>Administration</option>
                                <option>Parent</option>
                                <option></option>
                            </select>
                        </center>
                    </div>
                <center>
                <input class="btn btn-md btn-success" name="Submit" value="S'authentifier" type="Submit" /> <br/><br/>
                    <div class="form-group">
                        <label for="register">Vous n'avez pas encore un compte ?</label>
                        @Html.ActionLink("inscrivez-vous", "Register", "Account", new { area = "" }, new { @class = "" })
                    </div>
                    </center>
            </form>
        </div>
    </div>